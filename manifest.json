{
  "manifest_version": 3,
  "name": "IIM Indore Auto-Login",
  "version": "1.0",
  "description": "Automatically logs into the IIM Indore campus Wi-Fi.",
  "permissions": [
    "storage",
    "alarms",
    "webRequest"
  ],
  "optional_host_permissions": [
    "<all_urls>"
  ],
  "host_permissions": [
    "http://192.168.1.3:1000/*",
    "http://192.168.1.3/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["http://192.168.1.3:1000/login?*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  }
}
